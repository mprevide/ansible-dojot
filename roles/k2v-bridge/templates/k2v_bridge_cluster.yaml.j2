apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: k2v-bridge
  namespace: dojot
spec:
  serviceName: "k2v-bridge"
  selector:
    matchLabels:
      app: k2v-bridge
  replicas: 4
  template:
    metadata:
      labels:
        app: k2v-bridge
    spec:
      containers:
      - name: k2v-bridge
        image: jonaphael/mqtt_client
        env:
        - name: AUTH_URL
          value: "http://auth:5000"
        - name: DATA_BROKER
          value: "http://data-broker"
        - name: DATA_BROKER_DNS
          value: "data-broker"
        - name: DATA_BROKER_PORT
          value: "80"
        - name: KAFKA_HOSTS
          value: "kafka-server:9092"
        - name: DOJOT_MQTT_HOST
          value: "vernemq-k8s"
        - name: DOJOT_MQTT_PORT
          value: "8883"
        - name: CERT_DNS
          value: "k2v-bridge"
        - name: CERT_EJBCA_API_BROKER
          value: "ejbca-simple"
        - name: CERT_EJBCA_API_PORT
          value: "5583"
        - name: ENABLE_DOJOT
          value: "false"
        - name: LOG_LEVEL
          value: "info"
