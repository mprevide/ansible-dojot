apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: k2v-bridge-verne
  namespace: {{ dojot_namespace }}
spec:
  serviceName: "k2v-bridge-verne"
  selector:
    matchLabels:
      app: k2v-bridge-verne
  replicas: 1
  template:
    metadata:
      labels:
        app: k2v-bridge-verne
    spec:
      containers:
      - name: k2v-bridge-verne
        image: dojot/k2v-bridge-verne:{{ dojot_k2v_version}}
        env:
        - name: AUTH_URL
          value: "http://auth:5000"
        - name: DATA_BROKER
          value: "http://data-broker"
        - name: DATA_BROKER_DNS
          value: "data-broker"
        - name: DATA_BROKER_PORT
          value: "80"
        - name: KAFKA_HOSTS
          value: "kafka-server:9092"
        - name: DOJOT_MQTT_HOST
          value: "vernemq-k8s"
        - name: DOJOT_MQTT_PORT
          value: "8883"
        - name: CERT_DNS
          value: "k2v-bridge-verne"
        - name: CERT_EJBCA_API_BROKER
          value: "ejbca-simple"
        - name: CERT_EJBCA_API_PORT
          value: "5583"
        - name: LOG_LEVEL
          value: "info"
